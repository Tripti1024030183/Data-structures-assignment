//reversing an array
#include<iostream>
using namespace std;

int main()
{
    int arr[100];
    int n;
    int temp;
     cout<<"Enter no of elements:";
        cin>>n;
        cout<<"enter elements:";
        for(int i=0;i<n;i++)
        {
            cin>>arr[i];
        }
//reverse
for(int i=0;i<n/2;i++)
{
    temp=arr[i];
    arr[i]=arr[n-1-i];
    arr[n-1-i]=temp;
}
cout<<"reversed array:";
for(int i=0;i<n;i++)
{
    cout<<arr[i]<<" ";
}
cout<<endl;
return 0;
}