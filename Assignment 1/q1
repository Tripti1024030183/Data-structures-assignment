/*
 Developa Menudrivenprogramtodemonstrate the followingoperations of Arrays
——MENU——-
1.CREATE
2.DISPLAY
3.INSERT
4.DELETE
5.LINEAR SEARCH
6.EXIT 
*/


#include<iostream>
using namespace std;

int main()
{
    int arr[100];
    int n=0;
    int choice;

    while(true)
   { cout<<"\n MENU \n"<<endl;
    cout<<" 1.Create " <<endl;
    cout<<" 2. Display " <<endl;
    cout<<" 3.Insert " <<endl;
    cout<<" 4.Delete " <<endl;
    cout<<" 5.LinearSearch " <<endl;
    cout<<" 6.Exit " <<endl;
    cout<<" enter your choice: " <<endl;
    cin>>choice;
  
    switch(choice)
    {
        case 1:
        //create array
       { cout<<"Enter no of elements:";
        cin>>n;
        cout<<"enter elements:";
        for(int i=0;i<n;i++)
        {
            cin>>arr[i];
        }
        cout<<"arrray created successfully \n";
        break;}


    case 2:
    //display array
   { cout<<"array elements: "<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    break;}

    case 3:
    //insert array
   { int ele,pos;
    cout<<"enter element to be inserted:";
    cin>>ele;
    cout<<"enter the position";
    cin>>pos;
    if (pos >= 0 && pos <= n)
    {
    for(int i=n-1;i>pos-1;i--)
     {
    arr[i+1]=arr[i];
      }
    arr[pos]=ele;
    n++;
    }
    else
    {
        cout<<"invalid position!";
    }
    cout<<"element inserted";
    break;
}
    case 4:
    //delete array
   { int post;
    cout<<"enter the position";
    cin>>post;
    if (post >= 0 && post < n)
    {
    for(int i=post;i<n-1;i++)
     {
    arr[i]=arr[i+1];
      }
      n--;
    cout<<"element deleted";
    }
    else
    cout<<"invalid position!";
    break;}

    case 5:
    //linear search
   { int ele1;
    int pos1=0;
    cout<<"enter element to be searched:";
    cin>>ele1;
   for(int i=0;i<n;i++)
   {
    if(arr[i]==ele1)
    {
        cout<<"element found at position"<<i<<endl;
        pos1=1;
    }
   }
    if(!pos1)
    {cout<<"element not found";
    }
   break;}

   case 6:
   //exit the program
   {cout<<"exiting the proagram";
   return 0;}
   
   default:
   {cout<<"invalid program";
   break;
   }
}
}
return 0;
}
